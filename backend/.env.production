# Backend Production Environment Variables
# Copy these to your hosting platform (Render, Railway, etc.)

# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=.render.com,.onrender.com,localhost,127.0.0.1

# Database (Get this from Neon, Supabase, or your database provider)
DATABASE_URL=postgresql://user:password@host:5432/database

# CORS (Update with your frontend URL)
CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,http://localhost:5173

# Python Version
PYTHON_VERSION=3.12.0

# Optional: Cloudinary for media files
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
